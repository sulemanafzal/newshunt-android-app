    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@color/white</item>
    </style>
    <!--circular imageview-->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavigationTextStyle">
        <item name="android:fontFamily">@font/poppin_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/black</item>
    </style>


    <!-- Define a custom style for the helper text -->
    <style name="CustomHelperText" parent="TextAppearance.MaterialComponents.Caption">
        <!-- Add the following item to change the text color -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item> <!-- Set your desired text size here -->
        <!-- Other text attributes if needed -->
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:lineSpacingExtra">8dp</item> <!-- Adjust the value as per your requirement -->
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>