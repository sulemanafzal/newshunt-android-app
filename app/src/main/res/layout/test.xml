<!-- activity_main.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="@dimen/_190sdp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/heatwave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_margin="@dimen/_12sdp"
        android:backgroundTint="@color/white"
        android:src="@drawable/back_icon_white"
        app:layout_constraintStart_toStartOf="@+id/img"
        app:layout_constraintTop_toTopOf="@+id/img"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="serif"
        android:text="View Source"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/back_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_icon" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_160sdp"
        android:background="@drawable/top_corner_signin"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.70"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/img">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/channel_logo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_22sdp"
            android:src="@drawable/ary_news_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

        <TextView
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:text="@string/ary_news"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/date"
            app:layout_constraintStart_toEndOf="@+id/channel_logo"
            app:layout_constraintTop_toTopOf="@+id/channel_logo" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@string/date"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/channel_logo"
            app:layout_constraintStart_toStartOf="@+id/channel_name"
            app:layout_constraintTop_toBottomOf="@+id/channel_name" />


        <TextView
            android:id="@+id/card_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:text="@string/heatwave_text"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/channel_logo" />

        <ImageView
            android:id="@+id/share_logo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/circle_background"
            android:scaleType="center"
            android:src="@drawable/share_icon"
            app:layout_constraintEnd_toStartOf="@+id/arch_logo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_title"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

        <ImageView
            android:id="@+id/arch_logo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#F9C8FF"
            android:scaleType="center"
            android:src="@drawable/arch_logo"
            app:layout_constraintBottom_toBottomOf="@+id/share_logo"
            app:layout_constraintEnd_toStartOf="@+id/fire_logo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/share_logo"
            app:layout_constraintTop_toTopOf="@+id/share_logo" />

        <ImageView
            android:id="@+id/fire_logo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#FFEACB"
            android:scaleType="center"
            android:src="@drawable/fire_logo"
            app:layout_constraintBottom_toBottomOf="@+id/arch_logo"
            app:layout_constraintEnd_toStartOf="@+id/unnameface_logo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/arch_logo"
            app:layout_constraintTop_toTopOf="@+id/arch_logo" />

        <ImageView
            android:id="@+id/unnameface_logo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#FFACC8"
            android:scaleType="center"
            android:src="@drawable/unamused_face"
            app:layout_constraintBottom_toBottomOf="@+id/arch_logo"
            app:layout_constraintEnd_toStartOf="@+id/feel_logo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/fire_logo"
            app:layout_constraintTop_toTopOf="@+id/arch_logo" />

        <ImageView
            android:id="@+id/feel_logo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#E1FBC2"
            android:scaleType="center"
            android:src="@drawable/feel"
            app:layout_constraintBottom_toBottomOf="@+id/arch_logo"
            app:layout_constraintEnd_toStartOf="@+id/normalface_logo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/unnameface_logo"
            app:layout_constraintTop_toTopOf="@+id/arch_logo" />

        <ImageView
            android:id="@+id/normalface_logo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#EFEFEF"
            android:scaleType="center"
            android:layout_marginEnd="@dimen/_50sdp"
            android:src="@drawable/normal_face"
            app:layout_constraintBottom_toBottomOf="@+id/arch_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/feel_logo"
            app:layout_constraintTop_toTopOf="@+id/arch_logo" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/normalface_logo"
            app:layout_constraintStart_toStartOf="@+id/share_logo"
            app:layout_constraintTop_toBottomOf="@+id/fire_logo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/largetext"
                android:textSize="@dimen/_14ssp" />

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
