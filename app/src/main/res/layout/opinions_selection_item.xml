<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_opinionsyoufollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ebrima_bold"
        android:text="@string/str_opinions_you_follow"
        android:textSize="@dimen/_14ssp"
        android:layout_margin="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/channel_logo_politcs"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:src="@drawable/hassannisar_image"
        app:layout_constraintStart_toStartOf="@+id/tv_opinionsyoufollow"
        app:layout_constraintTop_toBottomOf="@+id/tv_opinionsyoufollow"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />


    <TextView
        android:id="@+id/tv_politicsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:elevation="4dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:fontFamily="@font/ebrima_regular"
        android:gravity="center_vertical"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="@string/str_journalist_name"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@+id/channel_logo_politcs"
        app:layout_constraintTop_toTopOf="@+id/channel_logo_politcs" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:elevation="4dp"
        android:fontFamily="@font/ebrima_regular"
        android:gravity="center_vertical"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:layout_marginBottom="@dimen/_2sdp"
        android:shadowRadius="3"
        android:text="@string/str_location"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@+id/channel_logo_politcs"
        app:layout_constraintStart_toStartOf="@+id/tv_politicsName" />

    <ImageView
        android:id="@+id/exit_logo"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:src="@drawable/exit_logo"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="@+id/channel_logo_politcs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/channel_logo_politcs" />




</androidx.constraintlayout.widget.ConstraintLayout>